{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2018",
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "noEmitOnError": true,
    "types": ["vite/client","@testing-library/jest-dom"]

  },
  "include": [
    "./src/**/*",
    "./typings/global.d.ts",
    "./jest-setup"
  ],
  "exclude": [
    "./dist",
    "./build",
    "./node_modules"
  ]
}
